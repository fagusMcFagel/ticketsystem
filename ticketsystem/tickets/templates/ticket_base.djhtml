{% extends "base.djhtml" %}
{% block title %}{% endblock %}

{% block pagecontent %}
	{% if is_Form %}
	<form action="" method="POST" novalidate>
	{% endif %}
	{% block ticketcontent%}
    <div style="float: left; clear: right; height: 750px; width: 1300px; max-width:100%, max-height:100%; margin:0; padding:0;">
	    <div style="float:left; margin: 20px; width:45%; height:70%;">
	        <ul class="formlist">
	            <li>
	                <div class="detailheader">Issue</div>
	            </li>
	            {% for field in detailform %}
	            <li class="fielditem">
	                <div class="heading">{{ field.label_tag }}</div>
	                <div class="tablecont">{{ field }}</div>
	            </li>        
	            {% endfor %}
	                
	            {% if hasImage %}
	            <li class="fielditem">
	                <div class="heading">Screenshot</div>
	                <div class="tablecont"><a href="image/">Screenshot</a></div>
	            </li>
	            {% endif %}
	        </ul>
	    </div>
	    
	    <div style="float:left; clear:right; margin: 20px; width:45%; height:70%;">
	        <ul class="formlist">
	            <li>
	                <div class="detailheader">Bearbeitung</div>
	            </li>
	            {% for field in editform %}
	            <li class="fielditem">
	                <div class="heading">{{ field.label_tag }}</div>
	                <div class="tablecont" {% if not editable %}disabled{% endif %}>{{ field }}</div>
	            </li>
	            {% endfor %}
	        </ul>
	    </div>
	    
	    
	    <div style="float: left; clear:right; margin:20px;">
	        <table class="list" border="1" cellspacing="0" cellpadding="4px">
	            <tr>
	                <div class="detailheader">Ma√ünahmen</div>
	            </tr>
	            
	            <tr>
	        	    {% for header in headers %}
	         	    <td class="tableheading">{{ header }}</td>
	       			{% endfor %}
	          	</tr>
	          	
	           	{% for measure in measures %}
	           	<tr>
	            	{% for field in measure %}
	                {% if field.label == "UID" %}
	            	<td class="idlink"><a href="/tickets/measures/{{ field.value }}/">{{ field.value }}</a></td>
	           		{% else %}
	               	<td disabled>{{ field }}</td>
	               	{% endif %}
	           		{% endfor %}
	       		</tr>
	           	{% endfor %}
	        </table>
	    </div>
  	</div>
    {% endblock %}
	{% block userbuttons %}{% endblock %}
	{% if is_Form %}{% csrf_token %}{% endif %}
	{% if is_Form %}</form>{% endif %} 
{% endblock %}